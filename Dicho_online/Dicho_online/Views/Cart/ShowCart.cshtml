@using Dicho_online.Models
@model Dicho_online.Models.HomeViewModel
@{ 
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ShowCart</h2>
@if (Model.product_detail != null)
{
<table class="table">
    <tr>
        <th>
            Name
        </th>        
        <th>
            Image
        </th>
        <th>
            Quantity
        </th>
        <th>
            Unit price
        </th>
        <th>
            Container
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.product_detail)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>           
            <td>
                <a href="@Url.Action("Details","ProductDetails",new {id=item.ProductID })"><img src="@Html.DisplayFor(modelItem => item.Thumbnail)" ) width="150px" /></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td id="totalPrice">
                @Html.DisplayFor(modelItem => item.totalPrice)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Container1.name)
            </td>
        </tr>       
    }
</table>
    <div>
        <hr />
        <b style="float:right;padding-top:30px;">Total: @Html.Raw(@ViewBag.totalCash)</b>
    </div>
}
else
{
     @Html.Raw(@ViewBag.msg);
}

